<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".SesionFragment">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/usu2" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:text="Inicio de Sesion"
        android:textColor="#101010"
        android:textColorHint="#090909"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:text="Correo Electronico"
        android:textColor="#272626" />

    <EditText
        android:id="@+id/etcorreo"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:hint="p.e. micorreo@gmail.com"
        android:inputType="textEmailAddress"
        android:gravity="center_horizontal" />

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contraseña"
        android:gravity="center_horizontal"
        android:textColor="#272626" />

    <EditText
        android:id="@+id/etclave"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:hint="Contraseña"
        android:inputType="textPassword"
        android:gravity="center_horizontal" />

    <Button
        android:id="@+id/btingresar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:backgroundTint="#35588b"
        android:text="Ingresar" />
    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/tvregistrar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Haz clic AQUI para Registrarse!"
        android:textColor="#3F51B5"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal" />




</LinearLayout>